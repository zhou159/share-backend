<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.share.mapper.TrolleyMapper">

    <select id="queryTrolleyByUserId" resultType="com.share.ro.TrolleyRo">
        select * from share.trolley where user_id=#{userId}
    </select>

    <insert id="addTrolley">
        insert into share.trolley (user_id,goods_id,number)
                value (#{trolleyVo.userId},#{trolleyVo.goodsId},#{trolleyVo.number})
    </insert>

    <delete id="removeTrolley">
        delete from share.trolley where id=#{id}
    </delete>

    <update id="updateTrolley">
        update share.trolley set number=#{trolleyVo.number} where id=#{id}
    </update>
</mapper>