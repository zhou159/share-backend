<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.share.mapper.ArticleMapper">
    <insert id="addArticle" parameterType="com.share.entity.Article">
        insert into share.article (user_id,createtime,text) values (#{articleVo.userId},#{articleVo.createTime},#{articleVo.text})
    </insert>

    <update id="updateArticle" parameterType="com.share.entity.Article">
        update share.article
        set text=#{articleVo.text},updatetime=#{articleVo.updateTime}
        where id=#{articleId};
    </update>

    <delete id="deleteArticle" parameterType="com.share.entity.Article">
        delete from share.article where id=#{articleId}
    </delete>


    <select id="queryAllArticle" resultType="com.share.ro.ArticleRo">
        select * from share.article
    </select>

    <select id="queryArticleById" resultType="com.share.ro.ArticleRo">
        select * from share.article where id=#{id}
    </select>
</mapper>